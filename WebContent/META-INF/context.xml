<Context path="/kca21" docBase="www">
<Resource
  name="jdbc/kca21"
  auth="Container"
  type="javax.sql.DataSource"
  driverClassName ="com.mysql.jdbc.Driver" 
  loginTimeout="10"
  validationQuery="SELECT 1 FROM DUAL"
  maxWait ="5000"
  username="root"
  password="root"
  url="jdbc:mysql://localhost:3306/kca21"/>

<ResourceLink type="javax.sql.data.DataSource"
  name="jdbc/kca21"
  global="jdbc/kca21"/>

</Context>